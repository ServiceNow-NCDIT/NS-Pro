        <script><![CDATA[function assignPortToLocalCircuit() {
    var formTitle = "Assign Port to Local Circuit " + g_form.getValue('name');
    var site = g_form.getValue('x_g_sonc_ns_pro_site');
    var localCircuitID = g_form.getUniqueValue();

    var gmf = new GlideModalForm(formTitle, 'x_g_sonc_ns_pro_port', formCompleted);
    gmf.addParm('sys_id', g_list.getChecked());
    gmf.setOnloadCallback(populateDefaults);

    gmf.render();

    function populateDefaults(modalForm) {
        var iframe = modalForm.$window.find("#dialog_frame")[0];
        var iframeWindow = iframe.contentWindow ? iframe.contentWindow : iframe.contentDocument.defaultView;
        var d_form = iframeWindow.g_form;
        d_form.setValue('site', site);
        d_form.setValue('local_circuit_id', localCircuitID);

    }

  

}
  function formCompleted() {
        location.reload();
    }]]></script>
