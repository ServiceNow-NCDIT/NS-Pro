        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
   if (isLoading || newValue === '') {
      return;
   }

    var ga = new GlideAjax('x_g_sonc_ns_pro.location_ajax');
    ga.addParam('sysparm_name', 'getSiteLocation');
    ga.addParam('sysparm_site_id', newValue);
    ga.getXMLAnswer(getLoc);

    function getLoc(response) {
		
		alert(response);

        var loc = JSON.parse(response);
		g_form.setValue('location', loc.sysId);

    }
   
}]]></script>
