	var taskSysID = g_form.getUniqueValue();
	
	var localCircuit = new GlideAjax('x_g_sonc_ns_pro.circuit_ajax');
	localCircuit.addParam('sysparm_name', 'createTemporaryCircuit');
	localCircuit.addParam('sysparm_taskSysID', taskSysID);
	localCircuit.getXMLAnswer(getResponse);

	function getResponse(response){
		//alert(response);
		response = JSON.parse(response);
        if (response.resultCode == "success") {
			alert(response.message);
            location.reload();
        } else {
             return alert(response.message);
        }		
	}


}]]></script>
